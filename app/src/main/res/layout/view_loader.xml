<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.singh.daman.proprogressviews.DotsZoomProgress
        android:id="@+id/dotZoomProgress_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inner_color="@color/colorAccentDark"
        app:inner_radius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mid_color="@color/colorAccent"
        app:mid_radius="26dp"
        app:min_radius="10dp"
        app:outer_color="@color/colorAccentLight"
        app:outer_radius="30dp"
        app:zoom_speed="15" />
</android.support.constraint.ConstraintLayout>